function! FindTestFile()
    let l:dir = expand('%:h')
    let l:name = expand('%:t:r')
    let l:tf = l:dir . "/__tests__/" . l:name . ".spec.ts"
    if filereadable(l:tf)
        execute 'edit ' . l:tf
    endif

    let l:tf = l:dir . "/" . l:name . "_test.go"
    if filereadable(l:tf)
        execute 'edit ' . l:tf
    endif
endfunction
nnoremap <silent> <leader>o :call FindTestFile()<cr>



